---
import "../styles/global.css";

const {
  title = "Oriol",
  lang = "en",
  otherLangHref = "/de",
} = Astro.props;

const imprintHref = lang === "en" ? "/en/imprint" : "/de/impressum";
const privacyHref = lang === "en" ? "/en/privacy" : "/de/datenschutz";
---
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>
  <body class="bg-white text-neutral-900">
    <header class="border-b border-neutral-900 bg-neutral-900 text-neutral-100">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 py-4 flex items-center justify-between text-xs sm:text-sm">
        <a
          href={lang === "en" ? "/en" : "/de"}
          class="tracking-[0.25em] uppercase text-[0.7rem] sm:text-xs"
        >
          Oriol
        </a>
        <nav class="flex items-center gap-3 sm:gap-4">
          <a
            href="#menu"
            class="uppercase tracking-[0.16em] text-[0.7rem] sm:text-xs text-neutral-200 hover:text-[#C15A3A]"
          >
            {lang === "en" ? "Menu" : "Menü"}
          </a>
          <a
            href="#contact"
            class="uppercase tracking-[0.16em] text-[0.7rem] sm:text-xs text-neutral-200 hover:text-[#C15A3A]"
          >
            {lang === "en" ? "Contact" : "Kontakt"}
          </a>
          <span class="text-neutral-600">/</span>
          <a
            href={otherLangHref}
            class="uppercase tracking-[0.16em] text-[0.7rem] sm:text-xs text-neutral-200 hover:text-[#C15A3A]"
          >
            {lang === "en" ? "DE" : "EN"}
          </a>
          <a
            href="https://instagram.com/"
            aria-label="Instagram"
            class="ml-2 text-neutral-400 hover:text-[#C15A3A]"
            target="_blank"
            rel="noreferrer"
          >
            <span class="sr-only">Instagram</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              class="h-4 w-4"
              aria-hidden="true"
            >
              <rect
                x="3"
                y="3"
                width="18"
                height="18"
                rx="5"
                ry="5"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              />
              <circle
                cx="12"
                cy="12"
                r="4"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              />
              <circle cx="17" cy="7" r="1" fill="currentColor" />
            </svg>
          </a>
        </nav>
      </div>
    </header>

    <main class="max-w-4xl mx-auto px-4 sm:px-6 py-10 sm:py-14 space-y-12 sm:space-y-16">
      <slot />
    </main>

    <footer class="border-t border-neutral-900 bg-neutral-900 py-4 mt-4 text-[0.7rem] sm:text-xs text-neutral-400">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
        <span>© Oriol</span>
        <div class="flex items-center gap-4">
          <a href={imprintHref} class="hover:text-[#C15A3A]">
            {lang === "en" ? "Imprint" : "Impressum"}
          </a>
          <a href={privacyHref} class="hover:text-[#C15A3A]">
            {lang === "en" ? "Privacy" : "Datenschutz"}
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>